<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Plugins">
	<description>Generally-applicable sniffs for WordPress plugins</description>

	<rule ref="WordPress-Core">
        <!-- Template class extracts data into template scope. -->
        <exclude name="WordPress.Functions.DontExtract.extract_extract"></exclude>
        <!-- Template class references WP global which isn't snake case. -->
        <exclude name="WordPress.NamingConventions.ValidVariableName.NotSnakeCase"></exclude>
    </rule>
    <rule ref="WordPress-Docs" />
    <rule ref="WordPress-Extra" />

	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
